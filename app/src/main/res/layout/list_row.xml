<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"

    android:background="@drawable/row_bg"
    >
    <TextView
        android:id="@+id/foodName"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Food Name"
        android:textSize="20sp"
        android:layout_margin="5dp"
        />
    <TextView
        android:id="@+id/dateText"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:text="Date Text"
        android:layout_below="@+id/foodName"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <ImageView
        android:id="@+id/thumbnail"
        android:layout_below="@+id/dateText"
        android:layout_centerHorizontal="true"
        android:src="@drawable/appleimg"
        android:padding="10dp"
        android:layout_marginTop="10dp"
        android:layout_width="90dp"
        android:layout_height="90dp" />
    <TextView
        android:id="@+id/caloriesCount"
        android:text="120"
        android:textSize="40sp"
        android:layout_below="@id/thumbnail"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:textColor="@android:color/holo_red_light"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/calText"
        android:text="@string/cal_food"
        android:textSize="30sp"
        android:layout_below="@id/thumbnail"
        android:layout_alignBaseline="@id/caloriesCount"
        android:layout_toRightOf="@id/caloriesCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/hasChild"
        android:text=">"
        android:layout_marginLeft="50dp"
        android:layout_below="@id/calText"
        android:textSize="50sp"
        android:layout_toRightOf="@id/calText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>