<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    android:background="@android:color/darker_gray"
    tools:context="com.example.appdev.calcounter.foodItemActivity" >
    <ImageView
        android:id="@+id/detsLogo"
        android:src="@drawable/appleimg"
        android:layout_centerHorizontal="true"
        android:layout_width="180dp"
        android:layout_height="180dp" />
    <LinearLayout
        android:background="@drawable/row_bg"
        android:layout_below="@id/detsLogo"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/detsFoodName"
            android:text="NNNNNN"
            android:textSize="20dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detsCaloriesText"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:text="Calories : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detsCaloriesValue"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:text="200"
            android:layout_margin="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/detsDateText"
            android:textSize="25dp"
            android:layout_gravity="center"
            android:text="Consumed on : "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/detsShareButton"
            android:text="@string/share_text"
            android:layout_gravity="right"
            android:padding="5dp"
            android:layout_width="70dp"
            android:layout_height="70dp" />
    </LinearLayout>

</RelativeLayout>
